<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
        <servlet>
            <servlet-name>Init</servlet-name>
            <servlet-class>Init.OnStartupServlet</servlet-class>
            <load-on-startup/>
        </servlet>
        <servlet>
            <servlet-name>FileUpload</servlet-name>
            <servlet-class>GamesList.FileLoadServlet</servlet-class>
        </servlet>
        <servlet>
            <servlet-name>UserLogin</servlet-name>
            <servlet-class>Login.UserLoginServlet</servlet-class>
        </servlet>
        <servlet>
            <servlet-name>UserList</servlet-name>
            <servlet-class>UserManager.UserListServlet</servlet-class>
        </servlet>
        <servlet>
            <servlet-name>GameTable</servlet-name>
            <servlet-class>GameTable.GameTableServlet</servlet-class>
        </servlet>
        <servlet-mapping>
            <servlet-name>FileUpload</servlet-name>
            <url-pattern>/fileupload</url-pattern>
        </servlet-mapping>
        <servlet-mapping>
            <servlet-name>UserLogin</servlet-name>
            <url-pattern>/login</url-pattern>
        </servlet-mapping>
        <servlet-mapping>
            <servlet-name>UserList</servlet-name>
            <url-pattern>/userlist</url-pattern>
        </servlet-mapping>
        <servlet-mapping>
            <servlet-name>GameTable</servlet-name>
            <url-pattern>/gametable</url-pattern>
        </servlet-mapping>
</web-app>