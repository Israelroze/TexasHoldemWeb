<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
        <servlet>
            <servlet-name>FileUpload</servlet-name>
            <servlet-class>GamesList.FileLoadServlet</servlet-class>
        </servlet>
        <servlet>
            <servlet-name>UserLogin</servlet-name>
            <servlet-class>Login.UserLoginServlet</servlet-class>
        </servlet>
        <servlet>
            <servlet-name>JoinGame</servlet-name>
            <servlet-class>GamesList.JoinGameServlet</servlet-class>
        </servlet>
        <servlet>
            <servlet-name>StartHand</servlet-name>
            <servlet-class>Gameloop.StartNewHandServlet</servlet-class>
        </servlet>
        <servlet>
            <servlet-name>StartGame</servlet-name>
            <servlet-class>Gameloop.StartGameServlet</servlet-class>
        </servlet>
        <servlet>
            <servlet-name>AllowdedMoves</servlet-name>
            <servlet-class>Gameloop.AllowdedMovesServlet</servlet-class>
        </servlet>
        <servlet>
            <servlet-name>UserList</servlet-name>
            <servlet-class>UserManager.UserListServlet</servlet-class>
        </servlet>
        <servlet>
            <servlet-name>GameTable</servlet-name>
            <servlet-class>GameTable.GameTableServlet</servlet-class>
        </servlet>
        <servlet>
            <servlet-name>GameList</servlet-name>
            <servlet-class>GamesList.GameListServlet</servlet-class>
        </servlet>
        <servlet>
            <servlet-name>GameReady</servlet-name>
            <servlet-class>GamesList.GameReadyServlet</servlet-class>
        </servlet>
        <servlet-mapping>
            <servlet-name>FileUpload</servlet-name>
            <url-pattern>/fileupload</url-pattern>
        </servlet-mapping>
        <servlet-mapping>
            <servlet-name>GameList</servlet-name>
            <url-pattern>/gamelist</url-pattern>
        </servlet-mapping>
        <servlet-mapping>
            <servlet-name>UserLogin</servlet-name>
            <url-pattern>/login</url-pattern>
        </servlet-mapping>
        <servlet-mapping>
            <servlet-name>UserList</servlet-name>
            <url-pattern>/userlist</url-pattern>
        </servlet-mapping>
        <servlet-mapping>
            <servlet-name>GameTable</servlet-name>
            <url-pattern>/gametable</url-pattern>
        </servlet-mapping>
        <servlet-mapping>
            <servlet-name>JoinGame</servlet-name>
            <url-pattern>/joingame</url-pattern>
        </servlet-mapping>
        <servlet-mapping>
            <servlet-name>GameReady</servlet-name>
            <url-pattern>/gameready</url-pattern>
        </servlet-mapping>
        <servlet-mapping>
            <servlet-name>StartHand</servlet-name>
            <url-pattern>/starthand</url-pattern>
        </servlet-mapping>
        <servlet-mapping>
            <servlet-name>AllowdedMoves</servlet-name>
            <url-pattern>/getallowded</url-pattern>
        </servlet-mapping>
        <servlet-mapping>
            <servlet-name>StartGame</servlet-name>
            <url-pattern>/startgame</url-pattern>
        </servlet-mapping>
</web-app>